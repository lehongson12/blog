<% if user_signed_in? %>
	<p id="intro">
		Hello
		<%= current_user.name %>
		<br/>
		<span>
				Share your inspiration and see what's inspiring others.
		</span>
	</p>
<% else %>
	<p id = "intro">
		What Makes Your Beautifful?
		<br/>
		<span>
			Share your inspiration and see what's inspiring others.
		</span>
	</p>
<% end %>
<div id="posts" class="row">
	<% @posts.each do |post| %>
		<div class="post col-md-4">
			<div class="post_image">
				<%= link_to (image_tag post.image.url(:small)), post %>
			</div>
			<div class="post_content">
				<div class="title">
					<h2><%= link_to post.title.first(20), post %></h2>
				</div>
				<div class="data clearfix">
					<p class="username">Shared by <%= post.user.name %></p>
					<p class="buttons">
						<span class="glyphicon glyphicon-thumbs-up"></span><%= post.comments.count %>
						<span class="glyphicon glyphicon-thumbs-up"></span><%= post.get_likes.size %>
					</p>
				</div>
			</div>
		</div>
	<% end %>
</div>	
