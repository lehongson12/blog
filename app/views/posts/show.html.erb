<% if user_signed_in? %>
  <p id="intro">
    Hello
    <%= current_user.name %>
    <br/>
    <span>
        Share your inspiration and see what's inspiring others.
    </span>
  </p>
<% else %>
  <p id = "intro">
    What Makes Your Beautifful?
    <br/>
    <span>
      Share your inspiration and see what's inspiring others.
    </span>
  </p>
<% end %>
<div id="post_show">
	<h1><%= @post.title %></h1>
	<p class="username">
		Post by <%= @post.user.name %> | <%= time_ago_in_words(@post.created_at) %>  ago.
	</p>
  <div class="clearfix"></div>
  <div class="row">
    <div class="post_image_description col-md-10">
      <%= image_tag @post.image.url(:medium) %>
      <div class="description"><%= simple_format(@post.description) %></div>
      <div class="post_data col-md-2">
        <%= link_to "Visit Link", @post.link, class: "btn btn-primary" %>
        <%= link_to like_post_path(@post), method: :get, class: "data" do %>
          <i class="fa fa-thumbs-o-up Like" >
            <%= pluralize(@post.get_upvotes.size, "") %>
          </i>
        <% end %>
        <%= link_to dislike_post_path(@post), method: :get, class: "data" do %>
          <span class="fa fa-thumbs-o-down" >
          <%= pluralize(@post.get_downvotes.size, "") %>
          </span>
        <% end %>
        <p class="data" >
        <% if @post.user == current_user %>
          <%= link_to "Edit", edit_post_path(@post), class: "data" %>
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "data" %>
        <% end %>
        </p>
      </div>
    </div>
    <div id="random_post" class="col-md-2">
      <%= render "random_post" %>
    </div>
  </div>
</div>
<div id="comments">
  <%= render "comments" %>
</div>
