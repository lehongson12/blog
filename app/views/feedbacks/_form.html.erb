<% form_for Feedback.new do |f|%>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="form-group contact-form">
		<%= f.text_field :name, placeholder: "name...", class: "form-control tinymce" %>
	</div>
	<div class="form-group contact-form">
		<%= f.text_field :email, placeholder: "email...", class: "form-control tinymce" %>
	</div>
	<div class="form-group contact-form">
		<%= f.text_area :comment, placeholder: "add your comment here...", class: "form-control tinymce" %>
	</div>
	<div class="form-actions"  align="left">
      <%= f.submit "Add your comments", class: "button btn btn-default" %>
  </div>
<% end %>