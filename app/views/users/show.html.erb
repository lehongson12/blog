<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag(@user.avatar.url(:thumb)) if @user.avatar %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if user_signed_in? %>
    <section>
      <p class="text-muted">
        <%= @user.bio if @user.bio %>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <div id="posts" class="row">
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="microposts">
          <%= render @user.posts %>
        </ol>
      <% end %>
    </div>
  </div>
</div>