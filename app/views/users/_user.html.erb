<li>
  <% if user.avatar? %>
    <%= image_tag(user.avatar.url(:thumb), size: "64x64") %>
  <% else %>
    <%= image_tag("avatar-default.png", size: "64x64") %>
  <% end %>
  <%= link_to user.name, user %>
  <% if current_user.try(:admin?) && current_user = !@user %>
  	<%= link_to "delete", user, method: :delete, 
  							data: { confirm: "Are Your Sure?" }, class: "btn btn-danger" %>
  <% end %>
  <p class="text-muted">
  	<%= user.bio.first(140) if user.bio %>
  </p>
</li>
